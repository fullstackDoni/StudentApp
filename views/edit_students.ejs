<%- include('layout/header') %>
<%- include('layout/navbar') %>
<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
        <div class="card shadow">
            <div class="card-header bg-success">
                <h3 class="text-light">Edit Students</h3>
            </div>
            <div class="card-body p-4">
                <form action="/api/edit/<%= student._id %>" method="post" id="edit-form">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="mb-3">
                        <label for="name">Name</label>
                        <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" required value="<%= student.name %>" />
                    </div>
                    <div class="mb-3">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter email" required value="<%= student.email %>"/>
                    </div>
                    <div class="mb-3">
                        <label for="profession">Profession</label>
                        <select name="profession" class="form-control form-control-lg" required>
                            <% professions.forEach(profession => { %>
                                <option value="<%= profession %>" <%= profession === student.profession ? 'selected' : '' %>><%= profession %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="course">Course</label>
                        <select name="course" class="form-control form-control-lg" required>
                            <% courses.forEach(course => { %>
                                <option value="<%= course %>" <%= course === student.course ? 'selected' : '' %>><%= course %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="mb-3 d-grid">
                        <input type="submit" name="submit" value="+" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
  </div>
</div>