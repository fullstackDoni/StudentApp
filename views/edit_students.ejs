<%- include('layout/header') %>
<%- include('layout/navbar') %>
<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
        <div class="card shadow">
            <div class="card-header bg-success">
                <h3 class="text-light">Edit Students</h3>
            </div>
            <div class="card-body p-4">
                <form action="/update/<%= student._id %>" method="post" id="edit-form" >
                    <div class="mb-3">
                        <label for="name">Name</label>
                        <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" required value="<%= student.name %>" />
                    </div>
                    <div class="mb-3">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter email" required value="<%= student.email %>"/>
                    </div>
                    <div class="mb-3">
                        <label for="email">Profession</label>
                        <input type="text" name="profession" class="form-control form-control-lg" placeholder="Enter Profession" required value="<%= student.profession %>"/>
                    </div>
                    <div class="mb-3">
                        <label for="email">Course</label>
                        <input type="text" name="course" class="form-control form-control-lg" placeholder="Enter Course" required value="<%= student.course %>"/>
                    </div>
                    <div class="mb-3 d-grid">
                        <input type="submit" name="submit" value="+" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
  </div>
</div>